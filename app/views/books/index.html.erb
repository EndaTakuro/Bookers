<% if flash[:alert] %>
	<p><%= flash[:alert] %></p>
<% end %>

<h3>Books</h3>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do|book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" =>"Are you sure ?"%></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h1>New book</h1>
<!--form_for部分-->
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<br><%= f.submit 'Create Book' %></br>
<% end %>

